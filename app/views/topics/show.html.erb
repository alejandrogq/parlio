<!-- tab_system -->
<div class="tab_system tab_system_subjects">

  <%= render :partial => 'activity/activity_menu' %>

  <!-- tab_cont -->
  <div class="tab_cont">

    <%= render :partial => 'activity/topics' %>

    <!-- subject_cont -->
    <div class="subject_cont subject_cont_category">

        <h2><%= @topic.name %></h2>
        
        <% if !@topic.initiatives.blank? %>

          <% for ini in @topic.initiatives %>
          <!-- subject -->
          <div class="activity subject">
            <h3 class="title">
              <%= link_to ini.title, initiative_path(ini) %>
            </h3>
            <p class="subject_type"><span><%= ini.initiative_type %></span></p>
             
            <%= render :partial => 'activity/activity_tags', :locals => { :activity => ini } %>

            <%= render :partial => 'activity/activity_meta_line', :locals => { :activity => ini } %>
          </div>
          <% end %>

        <% end %>
        
        
        <!-- subject -->
        <div class="activity subject">
          <h3 class="title"><a href="#">Escuela pública San Martin Agirre de Bergara</a></h3>
          <p class="subject_type"><span>Pregunta para su respuesta escrita</span></p>

          <!-- tag_mod -->
          <div class="tag_mod">
            <h4 class="tag_mod_title">Etiquetas</h4>
            <ul class="tag_list">
              <li><a class="tag" href="#">minoría sexual</a></li>
              <li><a class="tag" href="#">Osakidetza</a></li>
              <li><a class="tag" href="#">terapéutica</a></li>
              <li><a class="tag" href="#">cirugía</a></li>
            </ul>
          </div>
          <!-- /tag_mod -->

          <dl class="activity_meta line">
            <dt>Fecha:</dt>
            <dd>14.07.2009</dd>
            <dt>Por:</dt>
            <dd><a class="author" href="#">Maeztu Perez, Daniel</a> de <a class="party_name" href="#">Aralar</a></dd>
            <dt>Para:</dt>
            <dd>Consejero de Sanidad y Consumo</dd>
          </dl>
        </div>
        <!-- /subject -->

        
        <!-- pag_nav -->
        <div class="pag_nav">
          <span class="disabled prev_page">← Previous</span>
          <a rel="prev start" class="prev_page" href="#">← Previous</a>
          <a rel="prev start" href="#">1</a>
          <span class="current">2</span>
          <a rel="next" href="#">3</a>
          <a rel="next" class="next_page" href="#">Next →</a>
          <span class="disabled next_page">Next →</span>
        </div>
        <!-- /pag_nav -->

        <!-- rss_mod -->
        <a class="rss_mod">
          <strong>¿Te interesa?</strong>
          <span>Suscríbete a las actualizaciones de este tema vía <acronym title="Really Simple Syndication">RSS</acronym>.</span>
        </a>
        <!-- /rss_mod -->

      </div>
      <!-- /subject_cont -->

      <!-- subject_sidebar -->
      <div class="subject_sidebar">

