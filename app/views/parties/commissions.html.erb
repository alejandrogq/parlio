  <div class="party_activity_cont">
    <%= render :partial => 'parliamentarians' %>

    <h3>Actividad parlamentaria del partido</h3>
    <!-- party_activity_menu -->
    <ul class="party_activity_menu">
      <li class="first"><%= link_to "Asuntos", party_path(@party) %></li>
      <li><%= link_to "Debates", interventions_party_path(@party) %></li>
      <li class="last active"><%= link_to "Comisiones", commissions_party_path(@party) %></li>
    </ul>
