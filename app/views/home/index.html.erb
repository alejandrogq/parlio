<h2>Actividad parlamentaria</h2>

<% if !@parlio_activity.blank? %>
  <ul>
    <% for t in @parlio_activity %>
      <% if t.instance_of? Initiative %>
        <li>
          ASUNTO - <%= t.initiative_date %> <br/> 
          <%= link_to t.title, initiative_path(t) %>
        </li>
      <% else %>
      <li>
        DEBATE - <%= t.session_date %> <br/> 
        <%= link_to t.subject_title, intervention_path(t) %>
      </li>
      <% end %>
    <% end %>
  </ul>
<% end %>





<h2>Asuntos de actualidad<h2>

<h3>Categorías más activas</h3>

<% if !@most_active.blank? %>
  <ul>
    <% for t in @most_active %>
      <li><%= link_to t.name, topic_path(t) %> <span class="subject_num"><%= t.initiatives.size %> iniciativas</span> </li>
    <% end %>
  </ul>
<% end %>

<h3>Etiquetas más actuales</h3>
<% if !@most_active_tags.blank? %>
  <ul>
    <% for t in @most_active_tags %>
      <li><%= link_to t.name, initiatives_by_tag_path(t.name), :class => "tag" %> <span class="subject_num"><%= t.taggings.size %> asuntos</span></li><br/>
    <% end %>
  </ul>
<% end %>




<h2>Parlamentarios más activos</h2>
<% if !@most_active_parliamentarians.blank? %>
  <!-- parliamentarians_list -->
  <div class="parliamentarians_list">
    <% for p in @most_active_parliamentarians %>
      <!-- parliamentarian -->
      <div class="parliamentarian">
        <%= parlavatar(p) %>
        <div class="main">
          <h2 class="name"><%= link_to p.full_name, parliamentarian_path(p) %> </h2>
          <p class="party"><%= link_to p.party.party_acronym, party_path(p.party), :class => "party_name" %></p>
          <p class="subject_num"><%= p.initiatives.size %> iniciativas</p>
        </div>
      </div>
    <% end %>
  </div>
  <!-- /parliamentarians_list -->
<% end %>
