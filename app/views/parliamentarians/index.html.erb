<!-- col_left -->
<div class="col_left">
  <h2>Legislatura</h2>
  <ul class="legislature_menu">
    <li><a href="#">2009-2013</a></li>
  </ul>
</div>
<!-- /col_left -->

<!-- main_content -->
<div class="main_content">
  <h1>Parlamentarios</h1>
  <p class="claim">Legislatura 2009-2013 | <strong>Total:</strong> <%= @parliamentarians.size %> parlamentarios</p>
  
  <!-- parties-parliamentarians -->
  <div class="parties-parliamentarians">
    <h2>Partidos</h2>
    <ul>
      <% @parliamentarians.group_by{|p| p.party}.each do |party, parliamentarians | %>
        <li>  
          <% unless party.acronym.include?("Mixto")%>
            <li>  
              <% link_to party_path(party) do %>
                <%= image_tag party.logo, :size => "143x70" %>
                <strong><%= party.party_acronym %></strong>
                <em><%= parliamentarians.size %> parlamentarios</em>
              <% end %>
            </li>                                   
          <% end %>
        </li>
      <% end %>
      
    </ul>
  </div>
  <!-- /parties-parliamentarians -->
  
  <!-- parties-parliamentarians -->
  <div class="parties-parliamentarians">
    <h2>Grupo mixto</h2>
    <ul>
      <% @parliamentarians.group_by{|p| p.party}.each do |party, parliamentarians | %>
        <% if party.acronym.include?("Mixto")%>
          <li>  
            <% link_to party_path(party) do %>
              <%= image_tag party.logo, :size => "143x70" %>
              <strong><%= party.party_acronym %></strong>
              <em><%= parliamentarians.size %> parlamentarios</em>
            <% end %>
          </li>                                   
        <% end %>
      <% end %>
    </ul>
  </div>
  <!-- /parties-parliamentarians -->
  
</div>
<!-- /main_content -->